{
  "Parameters": {
    "Name": {
      "Type": "String"
    },
    "awsBucketName": {
      "Type": "String"
    },
    "accountNumber": {
      "Type": "String"
    }
  },
  "Resources": {
    "myVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "20",
        "AvailabilityZone": {
          "Fn::ImportValue": "myAvailabilityZone1"
        },
        "VolumeType": "gp2",
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    },
    "csye6225webapp": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "csye6225webapp",
        "VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "8080",
            "ToPort": "8080",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    },
    "csye6225rds": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "csye6225rds",
        "VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "5432",
            "ToPort": "5432",
            "SourceSecurityGroupId": {
              "Ref": "csye6225webapp"
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    },
    "myDynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "csye6225",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "5",
          "WriteCapacityUnits": "5"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    },
    "myS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Ref": "awsBucketName"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                {
                  "Ref": "Name"
                }
              ]
            }
          }
        ]
      }
    },
    "myWebapp": {
      "Type": "AWS::CodeDeploy::Application",
      "Properties": {
        "ApplicationName": "myWebapp"
      }
    },
    "myCodeDeployDeploymentGroup": {
      "DependsOn": "myEC2Instance",
      "Type": "AWS::CodeDeploy::DeploymentGroup",
      "Properties": {
        "ApplicationName": {
          "Ref": "myWebapp"
        },
        "DeploymentConfigName": "CodeDeployDefault.OneAtATime",
        "DeploymentGroupName": {
          "Ref": "myWebapp"
        },
        "DeploymentStyle": {
          "DeploymentType": "IN_PLACE",
          "DeploymentOption": "WITHOUT_TRAFFIC_CONTROL"
        },
        "Ec2TagFilters": [
          {
            "Key": "Name",
            "Type": "KEY_AND_VALUE",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "Name"
                  },
                  "EC2Instance"
                ]
              ]
            }
          }
        ],
        "ServiceRoleArn": {
          "Fn::Join": [
            "",
            [
              "arn:aws:iam::",
              {
                "Ref": "accountNumber"
              },
              ":role/CodeDeployServiceRole"
            ]
          ]
        }
      }
    },
    "myRDSDBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "description",
        "SubnetIds": {
          "Fn::Split": [
            ",",
            {
              "Fn::ImportValue": "mySubnets"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    },
    "myRDSDBInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "AllocatedStorage": "20",
        "AvailabilityZone": {
          "Fn::ImportValue": "myAvailabilityZone1"
        },
        "DBName": "csye6225",
        "DBInstanceClass": "db.t2.micro",
        "DBInstanceIdentifier": "csye6225-spring2018",
        "MultiAZ": "false",
        "Engine": "postgres",
        "MasterUsername": "csye6225master",
        "MasterUserPassword": "csye6225password",
        "VPCSecurityGroups": [
          {
            "Ref": "csye6225rds"
          }
        ],
        "DBSubnetGroupName": {
          "Ref": "myRDSDBSubnetGroup"
        },
        "PubliclyAccessible": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": [
              {
                "Ref": "Name"
              }
            ]
          }
        ]
      }
    }
  }
}