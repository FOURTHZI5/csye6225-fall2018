{
  "Parameters": {
    "stackName": {
      "Type": "String"
    },
    "domainName": {
      "Type": "String"
    },
    "awsBucketName": {
      "Type": "String"
    }
  },
  "Resources": {
    "myVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "20",
        "AvailabilityZone": {
          "Fn::ImportValue": "myAvailabilityZone1"
        },
        "VolumeType": "gp2",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "csye6225webapp": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "csye6225webapp",
        "VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "8080",
            "ToPort": "8080",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "csye6225rds": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "csye6225rds",
        "VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "5432",
            "ToPort": "5432",
            "SourceSecurityGroupId": {
              "Ref": "csye6225webapp"
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "myDynamoDBTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "csye6225",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "ProvisionedThroughput": {
          "ReadCapacityUnits": "5",
          "WriteCapacityUnits": "5"
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "myS3Bucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "domainName"
              },
              "csye6225.com"
            ]
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "myWebapp": {
      "Type": "AWS::CodeDeploy::Application",
      "Properties": {
        "ApplicationName": "myWebapp"
      }
    },
    "myRDSDBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": "description",
        "SubnetIds": {
          "Fn::Split": [
            ",",
            {
              "Fn::ImportValue": "mySubnets"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    },
    "myRDSDBInstance": {
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "AllocatedStorage": "20",
        "AvailabilityZone": {
          "Fn::ImportValue": "myAvailabilityZone1"
        },
        "DBName": "csye6225",
        "DBInstanceClass": "db.t2.micro",
        "DBInstanceIdentifier": "csye6225-spring2018",
        "MultiAZ": "false",
        "Engine": "postgres",
        "MasterUsername": "csye6225master",
        "MasterUserPassword": "csye6225password",
        "VPCSecurityGroups": [
          {
            "Ref": "csye6225rds"
          }
        ],
        "DBSubnetGroupName": {
          "Ref": "myRDSDBSubnetGroup"
        },
        "PubliclyAccessible": "false",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "stackName"
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "myWebAppOutput": {
      "Value": {
        "Ref": "myWebapp"
      },
      "Export": {
        "Name": "myWebapp"
      }
    },
    "csye6225WebappOutput": {
      "Value": {
        "Ref": "csye6225webapp"
      },
      "Export": {
        "Name": "csye6225webapp"
      }
    },
    "myVolumeOutput": {
      "Value": {
        "Ref": "myVolume"
      },
      "Export": {
        "Name": "myVolume"
      }
    },
    "csye6225rdsOutput": {
      "Value": {
        "Ref": "csye6225rds"
      },
      "Export": {
        "Name": "csye6225rds"
      }
    },
    "myRDSEndPointOutput": {
      "Value": {
        "Fn::GetAtt": [
          "myRDSDBInstance",
          "Endpoint.Address"
        ]
      },
      "Export": {
        "Name": "myRDSEndPoint"
      }
    }
  }
}
