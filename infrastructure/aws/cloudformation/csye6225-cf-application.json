{
  "Parameters": {
    "Name": {
      "Type": "String"
    }
  },
  "Resources": {
    "myVolume": {
      "Type": "AWS::EC2::Volume",
      "Properties": {
        "Size": "20",
        "AvailabilityZone": {
          "Fn::ImportValue": "myAvailabilityZone1"
        },
        "VolumeType": "gp2",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "Name"
                  },
                  "volume"
                ]
              ]
            }
          }
        ]
      }
    },
    "myEC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-9887c6e7",
        "InstanceType": "t2.micro",
        "DisableApiTermination": "false",
        "SubnetId": {
          "Fn::ImportValue": "mySubnet1"
        },
        "SecurityGroupIds": [
          {
            "Ref": "csye6225webapp"
          }
        ],
        "Volumes": [
          {
            "Device": "/dev/sdk",
            "VolumeId": {
              "Ref": "myVolume"
            }
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "Name"
                  },
                  "EC2Instance"
                ]
              ]
            }
          }
        ]
      }
    },
    "csye6225webapp": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Allow http to client host",
        "VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": "22",
            "ToPort": "22",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "80",
            "ToPort": "80",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "443",
            "ToPort": "443",
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": "5432",
            "ToPort": "5432",
            "CidrIp": "0.0.0.0/0"
          }
        ],
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "Name"
                  },
                  "securityGroup"
                ]
              ]
            }
          }
        ]
      }
    },
    "csye6225rds": {
      "Type": "AWS::RDS::DBSecurityGroup",
      "Properties": {
        "EC2VpcId": {
          "Fn::ImportValue": "myVPC"
        },
        "DBSecurityGroupIngress": [
          {
            "EC2SecurityGroupId": {
              "Ref": "csye6225webapp"
            }
          }
        ],
        "GroupDescription": "Frontend Access",
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "Name"
                  },
                  "DBSecurityGroup"
                ]
              ]
            }
          }
        ]
      }
    }
  }
}
